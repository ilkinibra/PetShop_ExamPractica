@model Slider
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Adminf/Views/Shared/_AdminLayout.cshtml";


}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <p class="card-description">
                    <a asp-controller="Slider" asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Subtitle</th>
                                    <th>Desc</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td><img style="width:200px;height:50px;" src="~/img/@Model.ImageUrl" /></td>
                                    <td>@Model.Title</td>
                                    <td>@Model.Subtitle</td>
                                    <td>@Model.Desc</td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                        <a class="btn btn-dark" asp-controller="Slider" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                        <a class="btn btn-success" asp-controller="Slider" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>

                                    </td>
                                </tr>


                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>
</div>


