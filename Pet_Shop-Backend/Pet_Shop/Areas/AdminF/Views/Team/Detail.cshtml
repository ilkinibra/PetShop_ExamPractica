@model Team
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Adminf/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Team Table</h4>
                <p class="card-description">
                    <a asp-controller="team" asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Insta</th>
                                    <th>Fb</th>
                                    <th>Twitter</th>
                                    <th>Linkedin</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td><img style="width:200px;height:50px;" src="~/img/@Model.ImageUrl" /></td>
                                    <td>@Model.Name</td>
                                    <td>@Model.Position</td>
                                    <td>@Model.Insta</td>
                                    <td>@Model.Face</td>
                                    <td>@Model.Twitter</td>
                                    <td>@Model.Linkedin</td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="team" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                        <a class="btn btn-dark" asp-controller="team" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                        <a class="btn btn-success" asp-controller="team" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>

                                    </td>
                                </tr>


                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>
</div>
