@model IEnumerable<Bio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Adminf/Views/Shared/_AdminLayout.cshtml";
}
@if (Model.Count() > 0)
{


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bio Table</h4>
                    <p class="card-description">
                        <a asp-controller="Bio" asp-action="Create" class="btn btn-primary">Create</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Location</th>
                                        <th>Phone</th>
                                        <th>Mail</th>
                                        <th>Insta</th>
                                        <th>Fb</th>
                                        <th>Twitter</th>
                                        <th>Linkedin</th>
                                        <th>Setting</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var Model in Model)
                                    {
                                        <tr>
                                            <td>@Model.Location</td>
                                            <td>@Model.Phone</td>
                                            <td>@Model.Mail</td>
                                            <td>@Model.Insta</td>
                                            <td>@Model.Facebook</td>
                                            <td>@Model.Twitter</td>
                                            <td>@Model.Linkedin</td>
                                            <td>
                                                <a class="btn btn-danger" asp-controller="Bio" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                                <a class="btn btn-dark" asp-controller="Bio" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                                <a class="btn btn-success" asp-controller="Bio" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <a asp-controller="slider" asp-action="Create" class="btn btn-primary">Create</a>
    <h1>Bosdu</h1>
}

